<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorBackground">
    <item
        android:left="2dp"
        android:top="2dp">
        <shape>
            <solid android:color="#29FFFFFF" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape>
            <solid android:color="#F97552" />
            <stroke
                android:width="1dp"
                android:color="#4D4B4B4B" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</ripple>